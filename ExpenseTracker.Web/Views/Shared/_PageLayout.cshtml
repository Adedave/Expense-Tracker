                </div><!-- /.navbar-header -->
                <div class="main-menu" id="Tracker-navbar-collapse">
                    <ul id="main-nav-ul" class="nav navbar-nav navbar-right">
                        <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"><a asp-action="Index" asp-controller="Home">Home</a></li>
