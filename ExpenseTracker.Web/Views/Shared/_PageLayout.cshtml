                    </ul><!-- /.navbar-nav -->
                </div><!-- /.navbar-collapse -->

            </div>

        </nav><!-- /.site-navigation -->

    </header><!-- /#masthead -->

    <main id="main" class="site-main">
        <section class="site-section-small section-portfolio-item">
            <div class="container">
                @RenderBody()
            </div>
        </section><!-- /.social-networks -->
    </main><!-- /.site-main -->
    
