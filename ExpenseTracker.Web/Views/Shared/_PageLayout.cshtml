        <div class="container">
            <div class="email">
                <a href="mailto:hello@ExpenseTracker.com">hello@ExpenseTracker.com</a>
            </div><!-- /.email -->
            <div class="row">
                <div class="col-md-3 col-xs-6">
                    <div class="mb-xs-20">
                        <a asp-action="Index" asp-controller="Home" class="site-title yellow-text">Expense<span>Tracker</span></a>
