@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row" id="login">
    <div class="col-md-6 col-md-offset-3">
       
        <div class="text-danger" asp-validation-summary="All"></div>
        
        <form class="form-horizontal my-90" asp-action="Login" method="post">
            <h3 class="section-title-small text-center mb-50">Login</h3>
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div class="row">
                <div class="col-sm-12">
                    <input class="form-control" type="email" name="Email" placeholder="E-mail *" required>
                </div>
                <div class="col-sm-12">
                    <input class="form-control" type="password" name="Password" placeholder="Password *" required>
                </div>
                <div class="col-sm-12">
                    <div class="checkbox">
                        <input type="checkbox" name="RememberMe" value="true" id="rememberMe">
                        <label for="rememberMe"> Remember me</label>
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button class="btn btn-yellow">Log In</button>
            </div>
            <div class="form-group">
                <p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-action="Register" asp-route-returnUrl="@ViewBag.returnUrl">Register as a new user</a>
                </p>
            </div>
        </form><!-- form-horizontal -->
    </div>
</div>
