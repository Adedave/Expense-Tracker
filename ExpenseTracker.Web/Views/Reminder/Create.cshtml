@model Reminder

@{
    ViewData["Title"] = "Create Reminder";
}

<h2>Create Reminder</h2>
<hr />
<span>@{var str = ViewBag.Added ?? "";} @str</span><br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="AppUserId" type="hidden" class="form-control" />
            </div>

            <div id="reminderTime" class="form-group">
                <label asp-for="ReminderTime" class="control-label">Reminder Time</label>
                <input type="time" name="ReminderTime" required value="@Model.ReminderTime.ToString("HH:mm:ss")" class="form-control" />
                <span asp-validation-for="ReminderTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReminderMessage" class="control-label">Reminder Message</label>
                <input asp-for="ReminderMessage" required value="Record your expenses on the Expense Tracker App" placeholder="Eg: Record your expenses on the Expense Tracker App" class="form-control" />
                <span asp-validation-for="ReminderMessage" class="text-danger"></span>
            </div>
