@model IEnumerable<BankTransaction>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
    <a asp-action="RegisterAccount" asp-controller="BankAccount">Register A New Bank Account</a>
</p>
<p>
    <a asp-action="Index" asp-controller="BankAccount">View Registered Bank Accounts</a>
</p>
<form asp-action="GetBankTransactions" asp-controller="Email" method="get">
    <div class="form-actions no-color">
        <p>
            Check For New Bank Transactions:@Html.DropDownList("accountNumber", new SelectList(ViewBag.BankAccounts, "AccountNumber", "AccountNumber"), "select  account", new { AccountNumber = "accountNumber", @class = "validate-select form-control" })
            <input type="submit" value="Check" class="btn btn-default" /> 
        </p>
    </div>
</form>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Select Account:@Html.DropDownList("accountId", new SelectList(ViewBag.AccountList, "Id", "Name"), "select  account", new { Id = "accountId", @class = "validate-select form-control" })
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<h3>You can delete recorded transactions</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                S/N
            </th>
            <th>
                Subject
            </th>
            <th>
                Description
            </th>
            <th>
                Amount  (@("\u20A6"))
            </th>
            <th>
                Account Number
            </th>
            <th>
                Date
            </th>
            <th>
                Remarks
            </th>
            <th>
                Recorded?
            </th>
            <th>
                
            </th>
            <th>
                
            </th>
        </tr>
    </thead>

    <tbody>
        @{int i = 0;}
        @foreach (var item in Model)
        {
            i++;
        <tr>
            <td>@i</td>
            <td>@item.Subject</td>
            @*<td>@item.TransactionType</td>*@
            <td>@item.Description</td>
            <td>
                @{var total = item.TransactionAmount.ToString("0,0.00"); }
                @("\u20A6") @total
            </td>
            <td>@item.AccountNumber</td>
            <td>@item.TransactionDate.ToShortDateString()</td>
            <td>@item.Remarks</td>
            <td>@{var recorded = item.IsRecorded == true ? "Yes" : "No";}
                @recorded
            </td>
            @{ if (item.TransactionType == "Debit")
                {
                    <td>@Html.ActionLink("Record Debit Transaction", "RecordExpenseTransaction", "BankTransaction", new { Id = item.BankTransactionId })</td>
                    <td>
                        <a id="deleteItem-@item.BankTransactionId" data-target="#myModal-@item.BankTransactionId" class="trigger-btn" data-toggle="modal"><i class="fa fa-trash"></i></a>

                        <!-- Modal HTML -->
                        <div id="myModal-@item.BankTransactionId" class="modal fade">
                            <div class="modal-dialog modal-confirm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <div class="icon-box">
                                            <i class="fas fa-times"></i>
                                        </div>
                                        <h4 class="modal-title">Are you sure?</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Do you really want to delete this Bank Transaction? This process cannot be undone.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="DeleteTransaction" method="post">
                                            <input type="hidden" name="id" value="@item.BankTransactionId" />
                                            <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                }
                else
                {
                    <td>@Html.ActionLink("Record Credit Transaction", "RecordIncomeTransaction", "BankTransaction", new { Id = item.BankTransactionId })</td>
                    <td>
                        <a id="deleteItem-@item.BankTransactionId" data-target="#myModal-@item.BankTransactionId" class="trigger-btn" data-toggle="modal"><i class="fa fa-trash"></i></a>

                        <!-- Modal HTML -->
                        <div id="myModal-@item.BankTransactionId" class="modal fade">
                            <div class="modal-dialog modal-confirm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <div class="icon-box">
                                            <i class="fas fa-times"></i>
                                        </div>
                                        <h4 class="modal-title">Are you sure?</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Do you really want to delete this  Bank Transaction? This process cannot be undone.</p>
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="DeleteTransaction" method="post">
                                            <input type="hidden" name="id" value="@item.BankTransactionId" />
                                            <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>

                }
            }

        </tr>
        }

    </tbody>
</table>
